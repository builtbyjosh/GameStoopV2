<!DOCTYPE html>
<html>
  <head>
    <title>GameStoop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="/app/assets/stylesheets/styles.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Syne+Mono&display=swap" rel="stylesheet">
  </head>

  <body>

  <div >
    <nav class="border" >     
      <%= link_to 'Home', user_path(session[:user_id]) %> 
      <%= link_to 'View Games', games_path %> 
      <% if !!session[:cart_id] %>
        <%= link_to "Your Cart: #{current_cart.line_items.size} items with a value of #{current_cart.cart_total }$", user_cart_path(current_cart.id, session[:user_id]) %>
      <% end %>
    </nav>
  </div>

  
  <div class="border">
    <% flash.each do |type, msg| %>
      <div>
        <%= msg %>
      </div>
    <% end %>
        
    <%= yield %>
    <% if logged_in? %>
    <%= link_to 'Log Out', logout_path, method:'delete' %>
    <% end %>  
  </div>
  

  
  </body>
</html>
